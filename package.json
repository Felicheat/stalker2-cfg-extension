{
  "name": "stalker2-cfg-validator",
  "displayName": "Stalker 2 CFG Language Support",
  "description": "Comprehensive language support for Stalker 2 .cfg files, providing robust error-checking, formatting, and code intelligence.",
  "version": "1.0.0",
  "author": "Felicheat",
  "publisher": "felicheat",
  "type": "module",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Programming Languages"
  ],
  "galleryBanner": {
    "color": "#1e2d38",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Felicheat/stalker2-cfg-extension.git"
  },
  "license": "GPL-3.0-only",
  "keywords": [
    "stalker",
    "stalker2",
    "cfg",
    "linter",
    "formatter",
    "validator",
    "modding",
    "vscode",
    "extension"
  ],
  "activationEvents": [
    "onLanguage:stalkercfg"
  ],
  "main": "out/extension.cjs",
  "contributes": {
    "languages": [
      {
        "id": "stalkercfg",
        "extensions": [
          ".cfg"
        ],
        "aliases": [
          "Stalkercfg"
        ],
        "configuration": "./configuration/language-config.json"
      }
    ],
    "themes": [
      {
        "label": "StructLang Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/structTheme-color-theme.json"
      }
    ],
    "grammars": [
      {
        "language": "stalkercfg",
        "scopeName": "source.struct",
        "path": "./syntaxes/struct.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "STALKER 2 CFG Support",
      "properties": {
        "stalker2CfgValidator.indentLevel": {
          "type": "number",
          "default": 3,
          "description": "The number of spaces to use for each level of indentation when formatting."
        },
        "stalker2CfgValidator.tabWidth": {
          "type": "number",
          "default": 3,
          "description": "The number of spaces a tab character represents for validation and formatting."
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "^0.20.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  },
  "files": [
    "out",
    "syntaxes",
    "themes",
    "images",
    "configuration",
    "README.md",
    "LICENSE"
  ]
}
